<Window x:Class="ChromebookGUI.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChromebookGUI"
        mc:Ignorable="d"
        Title="InputWindow" Height="175" Width="400">
    <Grid Margin="10,0,10,0">
        <TextBlock x:Name="instructionTextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="You should never see this!" VerticalAlignment="Top" Height="29" Width="354" FontSize="18"/>
        <TextBox x:Name="inputBox" HorizontalAlignment="Left" Height="59" Margin="22,44,0,0" TextWrapping="Wrap" Text="Enter input here..." VerticalAlignment="Top" Width="324"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="271,116,0,0" VerticalAlignment="Top" Width="75" Click="okButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="175,116,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
        <Button x:Name="ExtraButton" Content="ExtraButton.Text" HorizontalAlignment="Left" Margin="22,116,0,0" VerticalAlignment="Top" Width="120" Click="ExtraButton_Click"/>

    </Grid>
</Window>
